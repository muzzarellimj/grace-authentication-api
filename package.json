{
    "name": "grace-authentication-api",
    "version": "0.0.1",
    "description": "A Node-based REST API serving authentication to the Grace collection management platform",
    "main": "index.js",
    "scripts": {
        "build": "npx tsc",
        "lint:check": "npx prettier '**/*.ts' --check && npx eslint .",
        "lint:fix": "npx prettier '**/*.ts' --fix && npx eslint . --fix",
        "prepare": "husky",
        "start": "node dist/index.js",
        "start:dev": "tsx --watch src/index.ts | pino-pretty"
    },
    "author": "Michael Muzzarelli",
    "license": "ISC",
    "type": "module",
    "private": true,
    "lint-staged": {
        "**/*.ts": [
            "prettier --write",
            "eslint"
        ]
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/node": "^20.11.8",
        "@types/passport": "^1.0.16",
        "@types/passport-google-oauth20": "^2.0.14",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/pino": "^7.0.5",
        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "tsx": "^4.7.2",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.6.0"
    },
    "dependencies": {
        "@google-cloud/connect-firestore": "^3.0.0",
        "@google-cloud/firestore": "^7.4.0",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "express-session": "^1.18.0",
        "firebase": "^10.7.2",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pino": "^8.20.0",
        "pino-pretty": "^11.0.0",
        "semantic-release": "^23.0.8",
        "zod": "^3.22.4"
    }
}
